<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/AboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="67dp"
        android:text="About Us"
        android:textColor="#4a876b"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="54dp"
        android:padding="10dp"
        android:text="Wireless telemedicine also known as mHealth is refining the care process integration and increasing the productivity of healthcare system in this era.
This android app 'Health Monitoring App'takes data from the user and analyzes its body in respect of a sound health.An user can register free and calculate
its heartrate, calorie intake, BMI and footsteps.According to that calculation, we provide diet and exercise plans to live a healthy life.
It includes pill reminders and health emergency alerts.
The sole purpose of building this app is to make people's life
easier by delivering quality care with improved interaction and efficient workflows."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutUs" />

</androidx.constraintlayout.widget.ConstraintLayout>